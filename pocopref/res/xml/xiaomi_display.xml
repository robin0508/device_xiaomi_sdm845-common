<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="xiaomi_display_profile"
        android:title="@string/xiaomi_display_profile_title"
        android:entries="@array/xiaomi_display_listentries"
        android:entryValues="@array/xiaomi_display_listvalues"
        android:defaultValue="default"
        android:summary="%s" />

    <com.lineageos.settings.pocopref.utils.SeekBarPreference
        android:key="color_temp"
        android:title="@string/color_temp"
        android:persistent="false"
        android:layout="@layout/slider_preference"
        android:recycleEnabled="false"
        app:max_value="-100"
        app:min_value="-10000000"
        app:default_value="0"/>

</PreferenceScreen>
